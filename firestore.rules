rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function matchIsOpen(matchId) {
      let matchDoc = get(/databases/$(database)/documents/matches/$(matchId));
      return matchDoc.data.status == 'open' &&
             matchDoc.data.matchDate > request.time;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read all users (for rankings)
      allow read: if isAuthenticated();

      // User can create their own document on first sign-in
      allow create: if isAuthenticated() &&
                      isOwner(userId) &&
                      request.resource.data.uid == request.auth.uid;

      // User can update their own username
      // Admin can update any user's username, isAdmin status, totalPoints, or seasonMedals
      allow update: if (isOwner(userId) &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['username', 'lastUpdated'])) ||
                       (isAdmin() &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['username', 'isAdmin', 'lastUpdated', 'totalPoints', 'seasonMedals']));

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Matches collection
    match /matches/{matchId} {
      // Anyone authenticated can read matches
      allow read: if isAuthenticated();

      // Only admins can create matches
      allow create: if isAdmin() &&
                      request.resource.data.status == 'open' &&
                      request.resource.data.createdBy == request.auth.uid;

      // Admins can update all fields
      // Users can only increment totalBets when placing a bet
      allow update: if isAdmin() ||
                      (isAuthenticated() &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalBets']));

      // Only admins can delete matches
      allow delete: if isAdmin();
    }

    // Bets collection
    match /bets/{betId} {
      // Users can read their own bets
      // Anyone can read all bets (for statistics)
      allow read: if isAuthenticated();

      // Users can create bet if:
      // - They own the bet
      // - Match is open and hasn't started
      // - Score prediction follows rules (CearÃ¡ win/draw only)
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid &&
                      matchIsOpen(request.resource.data.matchId) &&
                      request.resource.data.predictedScore.ceara >=
                        request.resource.data.predictedScore.opponent;

      // Users can update their own bets if match is still open
      // Admins can always update any bet field (to set points after match or edit user bets)
      allow update: if isAdmin() ||
                      (isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       matchIsOpen(resource.data.matchId) &&
                       request.resource.data.predictedScore.ceara >=
                         request.resource.data.predictedScore.opponent &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['predictedScore', 'predictedPlayer', 'updatedAt']));

      // Only admins can delete bets (when deleting matches)
      allow delete: if isAdmin();
    }

    // Seasons collection
    match /seasons/{seasonId} {
      // Anyone authenticated can read seasons
      allow read: if isAuthenticated();

      // Only admins can create/update/delete seasons
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // System config
    match /systemConfig/config {
      // Anyone can read (to check if first user)
      allow read: if true;

      // Only authenticated users can write (for first user check)
      allow write: if isAuthenticated();
    }
  }
}
